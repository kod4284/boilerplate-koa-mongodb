{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions":
  {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES5", "ES6"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    }
  }
}